<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GameCards" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.GameCards.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
        <item name="fontFamily">serif</item>
    </style>

    <style name="Widget.GameCards.Title.Center" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/hearth_stone</item>
    </style>

    <style name="Widget.GameCards.Subtitle" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="fontFamily">@font/hearth_stone</item>
    </style>

    <style name="Widget.GameCards.Body" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="fontFamily">serif-monospace</item>
    </style>
</resources>